                    <label asp-for="iseBaslamaTarih" class="control-label"></label>
                    <input asp-for="iseBaslamaTarih" class="form-control" />
                    <span asp-validation-for="iseBaslamaTarih" class="text-danger"></span>
                </div>
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="calisanVardiya" /> @Html.DisplayNameFor(model => model.calisanVardiya)
