@model coreModel.Model.Personeller

@{
    ViewData["Title"] = "Güncelle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div style="margin-left:500px;">
    <h1>Güncelle</h1>


    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Güncelle">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="calisanID" />
                <div class="form-group">
                    <label asp-for="adSoyad" class="control-label"></label>
                    <input asp-for="adSoyad" class="form-control" />
