                </div>
                <div class="form-group">
                    <label asp-for="unvanID" class="control-label"></label>
                    <input asp-for="unvanID" class="form-control" />
                    <span asp-validation-for="unvanID" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Güncelle" class="btn btn-warning" style="margin-top:5px;" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>

</div>
