@model coreModel.Model.Gorevler

@{
    ViewData["Title"] = "Güncelle";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<div style="margin-left:500px;">
    <h1>Güncelle</h1>

    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Güncelle">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="gorevID" />
                <div class="form-group">
                    <label asp-for="gorevTanim" class="control-label"></label>
                    <input asp-for="gorevTanim" class="form-control" />
                    <span asp-validation-for="gorevTanim" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="gorevAdi" class="control-label"></label>
                    <input asp-for="gorevAdi" class="form-control" />
                    <span asp-validation-for="gorevAdi" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="puan" class="control-label"></label>
                    <input asp-for="puan" class="form-control" />
                    <span asp-validation-for="puan" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Güncelle" class="btn btn-warning" style="margin-top:5px;" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Liste">Geri dön</a>
    </div>

</div>
